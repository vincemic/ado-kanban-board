{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "ng: serve",
      "command": "npm",
      "args": ["run", "serve"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "Compiled successfully|Failed to compile|bundle generation complete"
          }
        }
      }
    },
    {
      "type": "shell",
      "label": "ng: build",
      "command": "npm",
      "args": ["run", "build"],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "playwright: test",
      "command": "npm",
      "args": ["run", "e2e"],
      "group": "test"
    },
    {
      "type": "shell",
      "label": "playwright: ui",
      "command": "npm",
      "args": ["run", "e2e:ui"],
      "group": "test"
    }
  ]
}
