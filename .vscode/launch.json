{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üöÄ Start Angular App",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/ng.cmd",
      "args": ["serve", "--port", "4200"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "üîç Debug Angular in Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/src",
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*"
      }
    },
    {
      "name": "üß™ Debug Playwright Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/playwright.cmd",
      "args": ["test", "--debug"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "PWDEBUG": "1"
      }
    },
    {
      "name": "üß™ Debug Current Test File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/playwright.cmd",
      "args": ["test", "${relativeFile}", "--debug"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "PWDEBUG": "1"
      }
    },
    {
      "name": "üé≠ Playwright UI Mode",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/playwright.cmd",
      "args": ["test", "--ui"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ]
}
